                    }
                    
                    bat encoding: 'UTF-8', script:'chcp 65001 & rmdir /s /q "C:/ProgramData/Jenkins/.jenkins/workspace/OpiDocs/OpiDocsRu/docs/docusaurus/build"'
                    bat encoding: 'UTF-8', script:'chcp 65001 & rmdir /s /q "C:/ProgramData/Jenkins/.jenkins/workspace/OpiDocs/OpiDocsRu/docs/docusaurus/node_modules"'
                    
            }
