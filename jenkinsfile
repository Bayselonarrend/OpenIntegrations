pipeline {
    agent any
    stages {
        stage('Prepare') {
            steps {
                    checkout scm
                    bat 'opm install osparser'
                    bat 'opm install cmdline'
                    bat 'opm install asserts'
                    bat 'opm install osparser'
                    bat 'opm install coloratos'
            }
        }

        stage('Build') {
            steps {
                    bat 'oscript ./.github/workflows/os/main.os'
            }
        }
    }
}