	"methods": [
		{
			"name": "ExecuteSQLQuery",
			"id": "EXECUTESQLQUERY",
			"description": "Executes an arbitrary SQL query",
			"params": [
				{
					"name": "--sql",
					"types": "String",
					"description": "Database query text",
					"default": null,
					"short": "-s"
				},
				{
					"name": "--params",
					"types": "Array Of Arbitrary",
					"description": "Array of positional parameters of the request",
					"default": "Пустое значение",
					"short": "-p"
				},
				{
					"name": "--force",
					"types": "Boolean",
					"description": "Includes an attempt to retrieve the result, even for nonSELECT queries",
					"default": false,
					"short": "-f"
				},
				{
					"name": "--db",
					"types": "String, Arbitrary",
					"description": "Existing connection or path to the base. In memory, if not filled",
					"default": "Пустое значение",
					"short": "-d"
				},
				{
					"name": "--exts",
					"types": "Map Of KeyAndValue",
					"description": "Extensions: Key > filepath or extension data, Value > entry point",
					"default": "Пустое значение",
					"short": "-e"
				}
			],
			"region": "Common methods"
		},
		{
			"name": "GetTableInformation",
			"id": "GETTABLEINFORMATION",
			"description": "Gets information about the table",
			"params": [
				{
					"name": "--table",
					"types": "String",
					"description": "Table name",
					"default": null,
					"short": "-t"
				},
				{
					"name": "--db",
					"types": "String, Arbitrary",
					"description": "Existing connection or database path",
					"default": "Пустое значение",
					"short": "-d"
				}
			],
			"region": "Orm"
		},
		{
			"name": "CreateTable",
			"id": "CREATETABLE",
			"description": "Creates an empty table in the database",
			"params": [
				{
					"name": "--table",
					"types": "String",
					"description": "Table name",
					"default": null,
					"short": "-t"
				},
				{
					"name": "--cols",
					"types": "Structure Of KeyAndValue",
