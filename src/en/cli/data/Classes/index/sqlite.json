					"short": "-c"
				},
				{
					"name": "--db",
					"types": "String, Arbitrary",
					"description": "Existing connection or database path",
					"default": "Пустое значение",
					"short": "-d"
				}
			],
			"region": "Orm"
		},
		{
			"name": "AddRecords",
			"id": "ADDRECORDS",
			"description": "Adds new rows to the table",
			"params": [
				{
					"name": "--table",
					"types": "String",
					"description": "Table name",
					"default": null,
					"short": "-t"
				},
				{
					"name": "--rows",
					"types": "Array of Structure",
					"description": "An array of string data structures: Key > field, Value > field value",
					"default": null,
					"short": "-r"
				},
				{
					"name": "--trn",
					"types": "Boolean",
					"description": "True > adding records to transactions with rollback on error",
					"default": true,
					"short": "-n"
				},
				{
					"name": "--db",
					"types": "String, Arbitrary",
					"description": "Existing connection or database path",
					"default": "Пустое значение",
					"short": "-d"
				}
			],
			"region": "Orm"
		},
		{
			"name": "UpdateRecords",
			"id": "UPDATERECORDS",
