			"name": "GetRecords",
			"id": "GETRECORDS",
			"description": "Gets records from the selected table",
			"params": [
				{
					"name": "--table",
					"types": "String",
					"description": "Table name",
					"default": null,
					"short": "-t"
				},
				{
					"name": "--fields",
					"types": "Array Of String",
					"description": "Fields for selection",
					"default": "*",
					"short": "-f"
				},
				{
					"name": "--filter",
					"types": "Array of Structure",
					"description": "Filters array. See GetRecordsFilterStructure",
					"default": "Пустое значение",
					"short": "-l"
				},
				{
					"name": "--order",
					"types": "Structure Of KeyAndValue",
