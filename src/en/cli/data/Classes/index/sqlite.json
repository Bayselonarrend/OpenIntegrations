		{
			"name": "AddTableColumn",
			"id": "ADDTABLECOLUMN",
			"description": "Adds a new column to an existing table",
			"params": [
				{
					"name": "--table",
					"types": "String",
					"description": "Table name",
					"default": null,
					"short": "-t"
				},
				{
					"name": "--name",
					"types": "String",
					"description": "Column name",
					"default": null,
					"short": "-n"
				},
				{
					"name": "--type",
					"types": "String",
					"description": "Column data type",
					"default": null,
					"short": "-p"
				},
				{
					"name": "--db",
					"types": "String, Arbitrary",
					"description": "Existing connection or database path",
					"default": "Пустое значение",
