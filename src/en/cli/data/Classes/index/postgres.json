			"name": "ExecuteSQLQuery",
			"id": "EXECUTESQLQUERY",
			"description": "Executes an arbitrary SQL query",
			"params": [
				{
					"name": "--sql",
					"types": "String",
					"description": "Database query text",
					"default": null,
					"short": "-s"
				},
				{
					"name": "--params",
					"types": "Array Of Arbitrary",
					"description": "Array of positional parameters of the request",
					"default": "Пустое значение",
					"short": "-p"
				},
				{
					"name": "--force",
					"types": "Boolean",
					"description": "Includes an attempt to retrieve the result, even for nonSELECT queries",
					"default": false,
					"short": "-f"
				},
				{
					"name": "--dbc",
					"types": "String, Arbitrary",
					"description": "Connection or connection string",
					"default": "Пустое значение",
					"short": "-d"
				},
				{
					"name": "--tls",
					"types": "Structure Of KeyAndValue",
					"description": "TLS settings, if necessary. See GetTlsSettings",
					"default": "Пустое значение",
					"short": "-t"
				}
			],
			"region": "Common methods"
