// Обработать серверный поток
// Инициализирует серверный поток и возвращает массив полученных сообщений
//
// Параметры:
//  Соединение     - Произвольный               - Существующее соединение или параметры соединения               - conn
//  Сервис         - Строка                     - Имя сервиса                                                    - service
//  Метод          - Строка                     - Имя метода                                                     - method
//  Запрос         - Структура Из КлючИЗначение - Данные первого запроса                                         - data
//  Таймаут        - Число                      - Таймаут выполнения отдельной операции (в мс)                   - tout
//  Tls            - Структура Из КлючИЗначение - Настройки TLS, если необходимо. См. ПолучитьНастройкиTls       - tls
//  ЧислоСообщений - Число                      - Максимум сообщений для получения. Без ограничений по умолчанию - count
//
// Возвращаемое значение:
//  Соответствие Из КлючИЗначение - Результат обработки
Функция ОбработатьСерверныйПоток(Знач Соединение
    , Знач Сервис
    , Знач Метод
    , Знач Запрос
    , Знач Таймаут = 10000
    , Знач Tls = Неопределено
    , Знач ЧислоСообщений = Неопределено) Экспорт

    Если ЭтоКоннектор(Соединение) Тогда
        ЗакрыватьСоединение = Ложь;
        Коннектор           = Соединение;
    Иначе
        ЗакрыватьСоединение = Истина;
        Коннектор           = ОткрытьСоединение(Соединение, Tls);
    КонецЕсли;

    Если Не ЭтоКоннектор(Коннектор) Тогда
        Возврат Коннектор;
    КонецЕсли;

    ЕстьЧислоСообщений = ЧислоСообщений <> Неопределено;

    Если ЕстьЧислоСообщений Тогда
        OPI_ПреобразованиеТипов.ПолучитьЧисло(ЧислоСообщений);
    КонецЕсли;

    Инициализация = ИнициализироватьПоток("server", Коннектор, Сервис, Метод, Запрос, Таймаут);

    Если Не Инициализация["result"] Тогда
        Возврат Инициализация;
    КонецЕсли;

    IDПотока        = Инициализация["streamId"];
    МассивСообщений = Новый Массив;

    Счетчик = 0;
    Пока Истина Цикл

        Если ЕстьЧислоСообщений Тогда
            Если Счетчик >= ЧислоСообщений Тогда
                Прервать;
            КонецЕсли;
        КонецЕсли;

        ТекущееСообщение = ПолучитьСообщение(Коннектор, IDПотока);

        Если Не ТекущееСообщение["result"] Тогда

            Ошибка = ТекущееСообщение["error"];

            СоответствиеОшибки = Новый Соответствие;
            СоответствиеОшибки.Вставить("result", Ложь);
            СоответствиеОшибки.Вставить("error" , Ошибка);
            СоответствиеОшибки.Вставить("data"  , МассивСообщений);

        Иначе

            ДанныеСообщения = ТекущееСообщение["message"];
            МассивСообщений.Добавить(ДанныеСообщения);

        КонецЕсли;

        Счетчик = Счетчик + 1;

    КонецЦикла;

    ЗакрытьПоток(Коннектор, IDПотока);

    Если ЗакрыватьСоединение Тогда
        ЗакрытьСоединение(Коннектор);
    КонецЕсли;

    СоответствиеРезультата = Новый Соответствие;
    СоответствиеРезультата.Вставить("result", Истина);
    СоответствиеРезультата.Вставить("data"  , МассивСообщений);

    Возврат СоответствиеРезультата;

КонецФункции

// Обработать клиентский поток
// Инициализирует клиентский поток, передает массив сообщений и получает финальный ответ
//
// Параметры:
//  Соединение     - Произвольный               - Существующее соединение или параметры соединения               - conn
//  Сервис         - Строка                     - Имя сервиса                                                    - service
//  Метод          - Строка                     - Имя метода                                                     - method
//  Запросы        - Массив Из Структура        - Массив запросов или одиночный запрос                           - data
//  Таймаут        - Число                      - Таймаут выполнения отдельной операции (в мс)                   - tout
//  Tls            - Структура Из КлючИЗначение - Настройки TLS, если необходимо. См. ПолучитьНастройкиTls       - tls
//
// Возвращаемое значение:
//  Соответствие Из КлючИЗначение - Результат обработки
Функция ОбработатьКлиентскийПоток(Знач Соединение
    , Знач Сервис
    , Знач Метод
    , Знач Запросы
    , Знач Таймаут = 10000
    , Знач Tls = Неопределено) Экспорт

    Если ЭтоКоннектор(Соединение) Тогда
        ЗакрыватьСоединение = Ложь;
        Коннектор           = Соединение;
    Иначе
        ЗакрыватьСоединение = Истина;
        Коннектор           = ОткрытьСоединение(Соединение, Tls);
    КонецЕсли;

    Если Не ЭтоКоннектор(Коннектор) Тогда
        Возврат Коннектор;
    КонецЕсли;

    Инициализация = ИнициализироватьПоток("client", Коннектор, Сервис, Метод, Неопределено, Таймаут);

    Если Не Инициализация["result"] Тогда
        Возврат Инициализация;
    КонецЕсли;

    OPI_ПреобразованиеТипов.ПолучитьМассив(Запросы);

    IDПотока = Инициализация["streamId"];
    Счетчик  = 0;

    Для Каждого Запрос Из Запросы Цикл

        ТекущаяОтправка = ОтправитьСообщение(Коннектор, IDПотока, Запрос);

        Счетчик = Счетчик + 1;

        Если Не ТекущаяОтправка["result"] Тогда

            Ошибка    = ТекущаяОтправка["error"];
            Получение = ПолучитьСообщение(Коннектор, IDПотока);

            СоответствиеОшибки = Новый Соответствие;
            СоответствиеОшибки.Вставить("result"         , Ложь);
            СоответствиеОшибки.Вставить("error"          , Ошибка);
            СоответствиеОшибки.Вставить("messages_sent"  , Счетчик);
            СоответствиеОшибки.Вставить("final_retrieval", Получение);

        КонецЕсли;

    КонецЦикла;

    ЗакрытиеКанала = ЗавершитьОтправку(Коннектор, IDПотока);

    Результат = ПолучитьСообщение(Коннектор, IDПотока);
    Результат.Вставить("messages_sent" , Счетчик);
    Результат.Вставить("finish_sending", ЗакрытиеКанала);

    ЗакрытьПоток(Коннектор, IDПотока);

    Если ЗакрыватьСоединение Тогда
        ЗакрытьСоединение(Коннектор);
    КонецЕсли;

    Возврат Результат;

КонецФункции

// Обработать двунаправленный поток
// Инициализирует двунаправленный поток, после чего передает и отправляет сообщения в указанном порядке
//
// Примечание:
// Пример: Получение сообщения после каждыйх двух отправленных и еще 3 в конце (null в 1С = Неопределено)^
// ПорядокОбмена: `[{Сообщение1}, {Сообщение2}, null, {Сообщение3}, ... {СообщениеN}, null, null, null, null, null]`
//
// Параметры:
//  Соединение          - Произвольный               - Существующее соединение или параметры соединения                         - conn
//  Сервис              - Строка                     - Имя сервиса                                                              - service
//  Метод               - Строка                     - Имя метода                                                               - method
//  ПорядокОбмена       - Массив Из Произвольный     - Массив из данных запросов и Неопределено там, где необходимо получение   - exch
//  Таймаут             - Число                      - Таймаут выполнения отдельной операции (в мс)                             - tout
//  Tls                 - Структура Из КлючИЗначение - Настройки TLS, если необходимо. См. ПолучитьНастройкиTls                 - tls
//  ПродолжатьПолучение - Булево                     - Продолжать получение после обработки порядка обмена                      - cnt
//
// Возвращаемое значение:
//  Соответствие Из КлючИЗначение - Результат обработки
Функция ОбработатьДвунаправленныйПоток(Знач Соединение
    , Знач Сервис
    , Знач Метод
    , Знач ПорядокОбмена
    , Знач Таймаут = 10000
    , Знач Tls = Неопределено
    , Знач ПродолжатьПолучение = Истина) Экспорт

    Если ЭтоКоннектор(Соединение) Тогда
        ЗакрыватьСоединение = Ложь;
        Коннектор           = Соединение;
    Иначе
        ЗакрыватьСоединение = Истина;
        Коннектор           = ОткрытьСоединение(Соединение, Tls);
    КонецЕсли;

    Если Не ЭтоКоннектор(Коннектор) Тогда
        Возврат Коннектор;
    КонецЕсли;

    Инициализация = ИнициализироватьПоток("bidi", Коннектор, Сервис, Метод, Неопределено, Таймаут);

    Если Не Инициализация["result"] Тогда
        Возврат Инициализация;
    КонецЕсли;

    OPI_ПреобразованиеТипов.ПолучитьМассив(ПорядокОбмена);
    OPI_ПреобразованиеТипов.ПолучитьБулево(ПродолжатьПолучение);

    IDПотока         = Инициализация["streamId"];
    МассивПолученных = Новый Массив;

    Для Каждого Действие Из ПорядокОбмена Цикл

        ЭтоПолучение = Действие = Неопределено;

        Если ЭтоПолучение Тогда
            ТекущаяОперация = ПолучитьСообщение(Коннектор, IDПотока);
        Иначе
            ТекущаяОперация = ОтправитьСообщение(Коннектор, IDПотока, Действие);
        КонецЕсли;

        Если Не ТекущаяОперация["result"] Тогда

            Ошибка = ТекущаяОперация["error"];

            СоответствиеОшибки = Новый Соответствие;
            СоответствиеОшибки.Вставить("result", Ложь);
            СоответствиеОшибки.Вставить("error" , Ошибка);
            СоответствиеОшибки.Вставить("data"  , МассивПолученных);

        Иначе

            Если ЭтоПолучение Тогда
                МассивПолученных.Добавить(ТекущаяОперация["message"]);
            КонецЕсли;

        КонецЕсли;

    КонецЦикла;

    ЗакрытиеКанала = ЗавершитьОтправку(Коннектор, IDПотока);

    Результат = Новый Соответствие;
    Результат.Вставить("result"        , Истина);
    Результат.Вставить("finish_sending", ЗакрытиеКанала);

    Если ПродолжатьПолучение Тогда

        Пока Истина Цикл

            ТекущаяОперация = ПолучитьСообщение(Коннектор, IDПотока);

            Если ТекущаяОперация["result"] Тогда
                МассивПолученных.Добавить(ТекущаяОперация["message"]);
            Иначе
                Результат.Вставить("final_retrieval", ТекущаяОперация);
                Прервать;
            КонецЕсли;

        КонецЦикла;

    КонецЕсли;

    Результат.Вставить("data", МассивПолученных);

    ЗакрытьПоток(Коннектор, IDПотока);

    Если ЗакрыватьСоединение Тогда
        ЗакрытьСоединение(Коннектор);
    КонецЕсли;

    Возврат Результат;

КонецФункции

