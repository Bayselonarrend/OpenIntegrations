// Открыть соединение !NOCLI
// Открывает gRPC соединение
//
// Параметры:
//  Параметры - Строка                     - Параметры соединения. См. ПолучитьПараметрыСоединения    - params
//  Tls       - Структура Из КлючИЗначение - Настройки TLS, если необходимо. См. ПолучитьНастройкиTls - tls
//
// Возвращаемое значение:
//  Произвольный - Объект коннектора или соответствие с информацией об ошибке
Функция ОткрытьСоединение(Знач Параметры, Знач Tls = Неопределено) Экспорт
     
    Если ЭтоКоннектор(Параметры) Тогда
        Возврат Параметры;
    КонецЕсли;

    OPI_ПреобразованиеТипов.ПолучитьКоллекциюКлючИЗначение(Параметры);
    
    Адрес = OPI_Инструменты.ПолучитьИли(Параметры, "address", Неопределено);
    
    Если Адрес = Неопределено Тогда
        Ошибка = Новый Соответствие;
        Ошибка.Вставить("result", Ложь);
        Ошибка.Вставить("error" , "Структура параметров не содержит адрес");
    КонецЕсли;
    
    Коннектор = OPI_Компоненты.ПолучитьКомпоненту("GRPC");
    Коннектор.ServerAddress = Строка(Адрес);

    Tls = OPI_Компоненты.УстановитьTls(Коннектор, Tls);

    Если Не OPI_Инструменты.ПолучитьИли(Tls, "result", Ложь) Тогда
        Возврат Tls;
    КонецЕсли;

    Результат = Коннектор.Connect();
    Результат = OPI_Инструменты.JSONВСтруктуру(Результат);
    
    Если Не OPI_Инструменты.ПолучитьИли(Результат, "result", Ложь) Тогда
        Возврат Результат;
    КонецЕсли;
    
    Результат = УстановитьProto(Коннектор, Параметры);

    Если Не OPI_Инструменты.ПолучитьИли(Результат, "result", Ложь) Тогда
        Возврат Результат;
    КонецЕсли;
    
    МетаданныеСоединения = OPI_Инструменты.ПолучитьИли(Параметры, "metadata", Неопределено);
    
    Если МетаданныеСоединения <> Неопределено Тогда
        
        Результат = УстановитьМетаданные(Коннектор, МетаданныеСоединения);

        Если Не OPI_Инструменты.ПолучитьИли(Результат, "result", Ложь) Тогда
            Возврат Результат;
        КонецЕсли;   
             
    КонецЕсли;
    
    Возврат Коннектор;

КонецФункции

// Закрыть соединение !NOCLI
// Явно закрывает переданное соединение
//
// Параметры:
//  Соединение - Произвольный - Объект компоненты с открытым соединением - conn
//
// Возвращаемое значение:
//  Структура Из КлючИЗначение - Результат закрытия соединения
Функция ЗакрытьСоединение(Знач Соединение) Экспорт

    Если ЭтоКоннектор(Соединение) Тогда

        Результат = Соединение.Disconnect();
        Результат = OPI_Инструменты.JsonВСтруктуру(Результат, Ложь);

    Иначе

        Результат = Новый Структура("result,error", Ложь, "It's not a connection");

    КонецЕсли;

    Возврат Результат;

КонецФункции

// Установить метаданные !NOCLI
// Устанавливает новые метаданные соединения
// 
// Примечание:
// Заменяет метаданные, установленные при создании соединения
// 
// Параметры:
//  Соединение - Произвольный               - Существующее соединение - conn
//  Метаданные - Структура Из КлючИЗначение - Список метаданных       - meta
// 
// Возвращаемое значение:
//  Соответствие Из КлючИЗначение - Результат обработки
Функция УстановитьМетаданные(Знач Соединение, Знач Метаданные) Экспорт

    Если ЭтоКоннектор(Соединение) Тогда

        OPI_ПреобразованиеТипов.ПолучитьКоллекциюКлючИЗначение(Метаданные);
        
        МетаданныеСтрокой = OPI_Инструменты.JSONСтрокой(Метаданные);
        
        Результат = Соединение.SetMetadata(МетаданныеСтрокой);
        Результат = OPI_Инструменты.JsonВСтруктуру(Результат);

    Иначе

        Результат = Новый Структура("result,error", Ложь, "Invalid connection object passed");

    КонецЕсли;

    Возврат Результат;
        
КонецФункции

// Вызвать метод
// Выполняет унарный запрос к выбранному сервису
// 
// Параметры:
//  Соединение - Произвольный               - Существующее соединение или параметры соединения         - conn
//  Сервис     - Строка                     - Имя сервиса                                              - service
//  Метод      - Строка                     - Имя метода                                               - method
//  Запрос     - Структура Из КлючИЗначение - Данные запроса                                           - data
//  Таймаут    - Число                      - Таймаут (в мс)                                           - tout
//  Tls        - Структура Из КлючИЗначение - Настройки TLS, если необходимо. См. ПолучитьНастройкиTls - tls
// 
// Возвращаемое значение:
//  Соответствие Из КлючИЗначение - Результат обработки
Функция ВызватьМетод(Знач Соединение
    , Знач Сервис
    , Знач Метод
    , Знач Запрос
    , Знач Таймаут = 10000
    , Знач Tls = Неопределено) Экспорт

    Если ЭтоКоннектор(Соединение) Тогда
        ЗакрыватьСоединение = Ложь;
        Коннектор           = Соединение;
    Иначе
        ЗакрыватьСоединение = Истина;
        Коннектор           = ОткрытьСоединение(Соединение, Tls);
    КонецЕсли;

    Если Не ЭтоКоннектор(Коннектор) Тогда
        Возврат Коннектор;
    КонецЕсли;
       
    СтруктураВызова = Новый Структура;
    OPI_Инструменты.ДобавитьПоле("service"   , Сервис , "Строка", СтруктураВызова);
    OPI_Инструменты.ДобавитьПоле("method"    , Метод  , "Строка", СтруктураВызова);
    OPI_Инструменты.ДобавитьПоле("timeout_ms", Таймаут, "Число" , СтруктураВызова);
    
    ОбработанныйЗапрос = ОбработатьЗапросПередОтправкой(Запрос);
    OPI_Инструменты.ДобавитьПоле("request", ОбработанныйЗапрос, "Текущий", СтруктураВызова);
    
    СтруктураВызоваСтрокой = OPI_Инструменты.JSONСтрокой(СтруктураВызова);
    
    Результат = Соединение.Call(СтруктураВызоваСтрокой);
    Результат = OPI_Инструменты.JsonВСтруктуру(Результат);
        
    Если ЗакрыватьСоединение Тогда
        ЗакрытьСоединение(Коннектор);
    КонецЕсли;

    Возврат Результат;
        
КонецФункции

