Функция ОбработатьЗапросПередОтправкой(Знач Компонента, Знач Запрос)

    Если Не ЗначениеЗаполнено(Запрос) Тогда
        Возврат Запрос;
    КонецЕсли;

    OPI_ПреобразованиеТипов.ПолучитьКоллекциюКлючИЗначение(Запрос);

    ОбработанныйЗапрос = Новый(ТипЗнч(Запрос));

    Для Каждого ТекущийЭлемент Из Запрос Цикл

        ТекущийКлюч     = ТекущийЭлемент.Ключ;
        ТекущееЗначение = ОбработатьЗначениеДляЗапроса(Компонента, ТекущийЭлемент.Значение);

        ОбработанныйЗапрос.Вставить(ТекущийКлюч, ТекущееЗначение);

    КонецЦикла;

    Возврат ОбработанныйЗапрос;

КонецФункции

Функция ИнициализироватьПоток(Знач Вид
    , Знач Соединение
    , Знач Сервис
    , Знач Метод
    , Знач Запрос
    , Знач Таймаут = 10000)

    Если Не ЭтоКоннектор(Соединение) Тогда

        СоответствиеОшибки = Новый Соответствие;
        СоответствиеОшибки.Вставить("result", Ложь);
        СоответствиеОшибки.Вставить("error" , "Implicit connection opening is senseless in this case");

        Возврат СоответствиеОшибки;

    КонецЕсли;

    СтруктураВызоваСтрокой = СформироватьСтрокуВызова(Соединение, Сервис, Метод, Таймаут, Запрос);

    Если Вид = "client" Тогда
        Результат = Соединение.StartClientStream(СтруктураВызоваСтрокой);
    ИначеЕсли Вид = "server" Тогда
        Результат = Соединение.StartServerStream(СтруктураВызоваСтрокой);
    Иначе
        Результат = Соединение.StartBidiStream(СтруктураВызоваСтрокой);
    КонецЕсли;

    Результат = OPI_Инструменты.JsonВСтруктуру(Результат);

    Возврат Результат;

КонецФункции

Функция ОбработатьЗначениеДляЗапроса(Знач Компонента, Значение)

    Если OPI_Инструменты.ЭтоКоллекция(Значение, Истина) Тогда

        ОбработанноеЗначение = Новый(ТипЗнч(Значение));

        Для Каждого ЭлементКоллекции Из Значение Цикл

            ТекущийКлюч     = ЭлементКоллекции.Ключ;
            ТекущееЗначение = ОбработатьЗначениеДляЗапроса(Компонента, ЭлементКоллекции.Значение);

            ОбработанноеЗначение.Вставить(ТекущийКлюч, ТекущееЗначение);

        КонецЦикла;

    ИначеЕсли OPI_Инструменты.ЭтоКоллекция(Значение) Тогда

        ОбработанноеЗначение = Новый Массив;

        Для Каждого ЭлементКоллекции Из Значение Цикл

            ТекущееЗначение = ОбработатьЗначениеДляЗапроса(Компонента, ЭлементКоллекции);
            ОбработанноеЗначение.Добавить(ТекущееЗначение);

        КонецЦикла;

    ИначеЕсли ТипЗнч(Значение) = Тип("ДвоичныеДанные") Тогда

        Результат = OPI_Компоненты.ПоместитьДанные(Компонента, Значение);

        Если Не Результат["result"] Тогда
            ВызватьИсключение СтрШаблон("Ошибка при передаче двоичного значения: %1", Результат["error"]);
        КонецЕсли;

        ОбработанноеЗначение = Результат["key"];

    Иначе

        ОбработанноеЗначение = Значение;

    КонецЕсли;

    Возврат ОбработанноеЗначение;

КонецФункции

