Функция УстановитьProto(Коннектор, Знач Параметры)
    
    НаборProto = OPI_Инструменты.ПолучитьИли(Параметры, "proto", Неопределено);
    
    Если НаборProto <> Неопределено Тогда
    
        OPI_ПреобразованиеТипов.ПолучитьКоллекциюКлючИЗначение(НаборProto);
        
        //@skip-check bsl-legacy-check-for-each-statetement-collection
        Для Каждого Proto Из НаборProto Цикл
       
            ТекущийКонтент = Proto.Значение;
            
            OPI_ПреобразованиеТипов.ПолучитьСтроку(ТекущийКонтент, Истина);
            
            Результат = Коннектор.LoadProto(Proto.Ключ, ТекущийКонтент);
            Результат = OPI_Инструменты.JSONВСтруктуру(Результат);
            
            Если Не Результат["result"] Тогда
                Возврат Результат;
            КонецЕсли;
            
        КонецЦикла;
        
        Результат = Коннектор.CompileProtos();
        Результат = OPI_Инструменты.JSONВСтруктуру(Результат);
            
    Иначе
        Результат = Новый Структура("result", Истина);
    КонецЕсли;
    
    Возврат Результат;
    
КонецФункции

